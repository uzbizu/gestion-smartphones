# Étape 1 : Builder le frontend
FROM node:18 AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Étape 2 : Servir avec nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Exposer le port nginx
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]